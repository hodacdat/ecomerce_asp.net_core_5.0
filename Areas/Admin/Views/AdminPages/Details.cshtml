@model PE.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Admin/assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/Admin/assets/css/app.min.css" rel="stylesheet">

</head>

<h1>Details</h1>
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Page list</a>
            <span class="breadcrumb-item active">Details</span>
        </nav>
    </div>
</div>

<div>
    <div class="main-content">
        <div class="card">
            <div class="card-body">
                <div class="container">
                    <h2 class="font-weight-normal m-b-10">@Model.Title</h2>
                    <div class="d-flex m-b-30">
                        <div class="avatar avatar-cyan avatar-img">

                        </div>
                        <div class="m-l-15">
                            <p class="m-b-0 text-muted font-size-13">@Model.CreateDate</p>
                        </div>
                    </div>
                    <img alt="Thumbnail" class="img-fluid w-100" src="~/images/pages/@Model.Thumb">
                    <div class="m-t-30">
                        <p>@Model.Contents</p>
                    </div>
                    <div class="d-flex m-t-40 align-items-center">
                        <span class="m-r-15">Share this post: </span>
                        <ul class="list-inline m-b-0">
                            <li class="list-inline-item">
                                <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                                    <i class="anticon anticon-facebook"></i>
                                </button>
                            </li>
                            <li class="list-inline-item">
                                <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                                    <i class="anticon anticon-twitter"></i>
                                </button>
                            </li>
                            <li class="list-inline-item">
                                <button class="font-size-16 btn btn-hover btn-icon btn-rounded">
                                    <i class="anticon anticon-instagram"></i>
                                </button>
                            </li>
                        </ul>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Core Vendors JS -->
<script src="~/Admin/assets/js/vendors.min.js"></script>

<!-- page js -->
<!-- Core JS -->
<script src="~/Admin/assets/js/app.min.js"></script>

