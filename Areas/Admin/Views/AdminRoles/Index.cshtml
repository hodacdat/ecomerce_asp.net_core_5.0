@model IEnumerable<PE.Models.Role>



@{
    ViewData["Title"] = "Role manager";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    //Layout = "_Layout";
}
<h1>Roles</h1>

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Roles list</span>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <div style="display: flex; justify-content: space-between;">
                <h3 class="box-title">Role Table</h3>
                <a class="btn btn-info" asp-action="Create">Create new</a>
            </div>
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead>
                        <tr>
                            <th class="border-top-0">ID</th>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0">Description</th>
                            <th class="border-top-0">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">@item.RoleId</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5"
                                   asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId">View</a>
                                        <a class="btn btn-secondary btn-tone m-r-5"
                                   asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                        <a class="btn btn-success btn-tone m-r-5"
                                   asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


